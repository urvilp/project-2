    <form action="/api/application" method="post">
      <div id="name">
        <input type="text" placeholder="first name" name="firstName" />
        <input type="text" placeholder="last name" name="lastName" />
      </div>
      <br /><br />

      <div id="street">
        <input required type="text" placeholder="street" name="street" />
      </div>
      <br /><br />

      <div id="city">
        <input required type="text" placeholder="city" name="city" />
        <input required type="text" placeholder="state" name="state" />
        <input required type="number" placeholder="Zip" name="zip" />
      </div>
      <br /><br />

      <div id="phone">
        <input required type="text" placeholder="ph" name="phone" />
        <input required type="email" placeholder="Email" name="email" />
      </div>
      <br /><br />

      <div id="dob">
        <input required type="text" placeholder="Gender" name="gender" />
        <input required type="number" placeholder="DoB" name="dob" />
      </div>
      <br /><br />

      <div id="education">
        <input
          required
          type="text"
          placeholder="qualification"
          name="qualification"
        />
        <input required type="text" placeholder="Education" name="education" />
      </div>
      <br /><br />
      <button id="button">Submit</button>
    </form>
  </body>
